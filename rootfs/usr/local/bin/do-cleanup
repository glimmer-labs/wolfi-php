#!/bin/sh

WOLFI_BASE_FLAG=false

for arg in "$@"; do
    case "$arg" in
        "--wolfi-base")
            WOLFI_BASE_FLAG=true
            ;;
        *)
            echo "Unknown option: $arg" >&2
            exit 1
            ;;
    esac
done

remove-composer

# Remove all scripts in /usr/local/bin (except this script for now)
for script in install-composer add-php-extensions add-composer-extensions install-php remove-composer add-shyim-repo add-glimmer-labs-repo list-installed-modules echo-color; do
    if [ -f "/usr/local/bin/$script" ]; then
        echo "Removing $script"
        rm "/usr/local/bin/$script"
    fi
done

if [ "$WOLFI_BASE_FLAG" = true ]; then
    apk del apk-tools wolfi-keys wolfi-base
fi

# Finally, remove this script itself
echo "Removing cleanup script"
rm -- "$0"
echo "Cleanup complete"
